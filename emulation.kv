#:import NoTransition kivy.uix.screenmanager.NoTransition
#:import ScreenManager kivy.uix.screenmanager
#:import dba database_access
#:import Mapview kivy.garden.mapview.MapView

#There are three keywords specific to Kv language:
#
#app: always refers to the instance of your application.
#root: refers to the base widget/template in the current rule
#self: always refer to the current widget

WindowManager:
    transition: NoTransition()
    HomeWindow:
    BrowseWindow:
    ManageWindow:
    GenerateWindow:
    GenerateUsersWindow:
    GenerateTagsWindow:

<GoBackBtn@Button>
    text: "Main menu"
    on_release:
        app.root.current = "homeWin"
   # background_color: 0.3, 0.4, 0.5, 1
    size_hint: .15, .08
    pos_hint: {"x": 0, "y": 0.92}

<LoadDataBtn@Button>
    text: "Load data"
    size_hint: .2, .08
    pos_hint: {"right": 1, "y": 0.92}
    on_release:
        app.root.get_screen(app.root.current).btn_create_user_labels()

<HomeWindow>:
    name: "homeWin"

    GridLayout:
        cols: 1

        Label:
            text: "Emulation app (Alpha v0.0.5)"
            bold: True
            italic: True
            color: 1,1,1,1


        GridLayout:
            cols: 2

            Button:
                id: browseBtn
                text: "Browse users"
                on_release:
                    app.root.current = "browseWin"
                    app.root.get_screen(app.root.current).btn_create_user_labels()

            Button:
                id: manageBtn
                text: "Manage users"
                on_release:
                    app.root.current = "manageWin"
                    app.root.get_screen(app.root.current).btn_create_user_labels()

        GridLayout:
            cols: 2

            Button:
                id: generate
                text: "Generate"
                on_release:
                    app.root.current = "generateWin"

            Button:
                id: just_map
                text: "Map"
                on_release:
                    root.show_popup_map()
        Button:
            id: start_sim
            text: "Start sim"
            on_release:
                #ToDo add create_users and create_tags and location_assign and then start the sim
                root.show_popup_map()

<BrowseWindow>:
    name: "browseWin"

    GoBackBtn:

    LoadDataBtn:

    ScrollView:
        id: scroll_content
        size_hint: (1, .92)
        bar_width: 10
        bar_color: 1, 1, 1, .7
        bar_inactive_color: 1, 1, 1, .3
        scroll_type: ['bars']
        do_scroll_y: True
        do_scroll_x: False

        StackLayout:
            id: content
            cols: 1
            spacing: 5

<ManageWindow>:
    name: "manageWin"

    GoBackBtn:

    LoadDataBtn:
        on_release:
            app.new_load = True

    ScrollView:
        id: scroll_content
        size_hint: (1, .92)
        bar_width: 10
        bar_color: 1, 1, 1, .7
        bar_inactive_color: 1, 1, 1, .3
        scroll_type: ['bars']
        do_scroll_y: True
        do_scroll_x: False

        StackLayout:
            id: content
            cols: 1
            spacing: 5

<MapView>:
    name: "map"
    lon: 19.4560
    lat: 51.7592
    zoom: 5
#    min_zoom: 3
#    max_zoom: 10
    snap_to_zoom: False
    pause_on_action: False






<GenerateWindow>
    name: "generateWin"

    GoBackBtn:

    Label:
        text: 'Generate'
        size_hint: .9, .2
        pos_hint: {"x": .05, "y": .7}

    GridLayout:
        cols: 2
        size_hint: .9, .2
        pos_hint: {"x": .05, "y": .4}

        Button:
            id: generate_tags_btn
            text: "Tags"
            halign: 'center'
            valign: 'middle'
            on_release:
                app.root.current = "generateTagsWin"

        Button:
            id: generate_users_btn
            text: "Users"
            halign: 'center'
            valign: 'middle'
            on_release:
                app.root.current = "generateUsersWin"


<GenerateUsersWindow>:
    name: "generateUsersWin"

    GoBackBtn:

    Label:
        text: 'Generate users'
        size_hint: .9, .2
        pos_hint: {"x": .05, "y": .7}

    GridLayout:
        cols: 2
        size_hint: .9, .2
        pos_hint: {"x": .05, "y": .4}

        Button:
            id: append_users
            text: "Append users list"
            halign: 'center'
            valign: 'middle'
            on_release:
                root.btn_append()

        Button:
            id: delete_and_create_new_users
            text: "Clear users list\nand generate new users"
            halign: 'center'
            valign: 'middle'
            on_release:
                root.btn_clear_and_generate()

<GenerateTagsWindow>
    name: "generateTagsWin"

    GoBackBtn:

    GridLayout:
        cols: 1

        Label:
            text: "Generate tags"
            color: 1,1,1,1


        GridLayout:
            cols: 2

            Button:
                id: addNewTagsBtn
                text: "Add new tags with users"
                on_release:
                    root.btn_add_new_tags()


            Button:
                id: deleteAllTagsBtn
                text: "Delete all tags"
                on_release:
                    root.btn_delete_all_tags()

#        Button:
#            id: addUsersToTagsBtn
#            text: "Add users to tags"
#            on_release:
#                root.btn_add_users_to_tags()

<PopCreateAppend>:
    Label:
        text: "amount: "
        size_hint: None, None
        height: 30
        width: 100
        pos_hint: {"center_x": .3, "center_y": .6}

    TextInput:
        id: amount_of_users
        size_hint: None, None
        height: 30
        width: 100
        pos_hint: {"center_x": .6, "center_y": .6}
        multiline: False

    Button:
        text: "Submit"
        size_hint: .8, .2
        pos_hint: {"center_x": .5, "center_y": .2}
        on_release:
            dba.create_users(int(amount_of_users.text))
            root.entry_done()

    Label:
        id: entry_done
        text: ''
        color: 0, 1, 0, 1
        size_hint: .8, .2
        pos_hint: {"center_x": .5, "center_y": .05}


<PopClearAndGenerate>
    Label:
        text: "amount: "
        size_hint: None, None
        height: 30
        width: 100
        pos_hint: {"center_x": .3, "center_y": .7}

    TextInput:
        id: amount_of_users
        size_hint: None, None
        height: 30
        width: 100
        pos_hint: {"center_x": .6, "center_y": .7}
        multiline: False

    Label:
        text: "password: "
        size_hint: None, None
        height: 30
        width: 100
        pos_hint: {"center_x": .3, "center_y": .5}

    TextInput:
        id: password
        password: True
        size_hint: None, None
        height: 30
        width: 100
        pos_hint: {"center_x": .6, "center_y": .5}
        multiline: False

    Button:
        text: "Submit"
        size_hint: .8, .2
        pos_hint: {"center_x": .5, "center_y": .2}
        on_release:
            if password.text == '123':\
            dba.delete_all_users();\
            dba.create_users(int(amount_of_users.text));\
            root.correct_password()
            else: root.incorrect_password()

    Label:
        id: incorrect_passwd
        text: ''
        color: 1, 0, 0, 1
        size_hint: .8, .2
        pos_hint: {"center_x": .5, "center_y": .05}

    Label:
        id: correct_passwd
        text: ''
        color: 0, 1, 0, 1
        size_hint: .8, .2
        pos_hint: {"center_x": .5, "center_y": .05}

<PopDeleteUser>:
    Label:
        text: "password: "
        size_hint: None, None
        height: 30
        width: 100
        pos_hint: {"center_x": .3, "center_y": .6}

    TextInput:
        id: password
        password: True
        size_hint: None, None
        height: 30
        width: 100
        pos_hint: {"center_x": .6, "center_y": .6}
        multiline: False

    Button:
        text: "Submit"
        size_hint: .8, .2
        pos_hint: {"center_x": .5, "center_y": .2}
        on_release:
            if password.text == '123' and app.new_load:\
            dba.delete_user(root.userid);\
            root.correct_data();\
            app.new_load = False
            else: root.incorrect_data()

    Label:
        id: incorrect_data
        text: ''
        color: 1, 0, 0, 1
        size_hint: .8, .2
        pos_hint: {"center_x": .5, "center_y": .05}

    Label:
        id: correct_data
        text: ''
        color: 0, 1, 0, 1
        size_hint: .8, .2
        pos_hint: {"center_x": .5, "center_y": .05}

<PopUpdateUserData>:
    GridLayout:
        cols: 2
        rows: 5
        size_hint: .9, .8
        pos_hint: {"center_x": .5, "center_y": .5}
        # name box
        Label:
            text: "name: "
            size_hint: None, None
            height: 30
            width: 200
    #        pos_hint: {"center_x": .1, "center_y": .9}

        TextInput:
            id: Name
            size_hint: None, None
            height: 30
            width: 100
            pos_hint: {"center_x": .3, "center_y": .9}
            multiline: False

        # surname box
        Label:
            text: "surname: "
            size_hint: None, None
            height: 30
            width: 200

        TextInput:
            id: Surname
            size_hint: None, None
            height: 30
            width: 100
            multiline: False

        # email box
        Label:
            text: "email: "
            size_hint: None, None
            height: 30
            width: 200

        TextInput:
            id: Email
            size_hint: None, None
            height: 30
            width: 100
            multiline: True

        # localization
        Label:
            text: "coords (split with ;) : "
            size_hint: None, None
            height: 30
            width: 200
            pos_hint: {"center_x": .6, "center_y": .9}

        TextInput:
            id: Current_localization
            size_hint: None, None
            height: 30
            width: 100
            multiline: False

        # password box
        Label:
            text: "password: "
            size_hint: None, None
            height: 30
            width: 200
            pos_hint: {"center_x": .3, "center_y": .4}

        TextInput:
            id: password
            password: True
            size_hint: None, None
            height: 30
            width: 100
            pos_hint: {"center_x": .6, "center_y": .4}
            multiline: False

    Button:
        text: "Submit"
        size_hint: .8, .2
        pos_hint: {"center_x": .5, "center_y": .2}
        on_release:
            if password.text == '123' and app.new_load and root.generate_data_dict() is not None:\
            new_data = root.generate_data_dict();\
            dba.update_user_data(root.userid, new_data);\
            root.correct_data();\
            app.new_load = False
            else: root.incorrect_data()

    Label:
        id: incorrect_data
        text: ''
        color: 1, 0, 0, 1
        size_hint: .8, .2
        pos_hint: {"center_x": .5, "center_y": .05}

    Label:
        id: correct_data
        text: ''
        color: 0, 1, 0, 1
        size_hint: .8, .2
        pos_hint: {"center_x": .5, "center_y": .05}


